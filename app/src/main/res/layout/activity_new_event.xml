<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.passel.NewEventActivity"
        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:enabled="true"
            android:hint="Event Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_date_data"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Start Date"
            android:layout_toLeftOf="@+id/start_date_button"
            android:layout_toStartOf="@+id/start_date_button" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/start_date_button"
            android:src="@drawable/ic_calendar"
            android:layout_below="@+id/name"
            android:layout_toLeftOf="@+id/start_time_data"
            android:layout_toStartOf="@+id/start_time_data"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_time_data"
            android:text="12:00 AM"
            android:layout_alignBottom="@+id/start_date_button"
            android:layout_alignRight="@+id/end_time_data"
            android:layout_alignEnd="@+id/end_time_data"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_date_data"
            android:layout_below="@+id/start_date_data"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="End Date "
            android:layout_toLeftOf="@+id/end_date_button"
            android:layout_toStartOf="@+id/end_date_button" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/end_date_button"
            android:src="@drawable/ic_calendar"
            android:layout_below="@+id/start_date_data"
            android:layout_toRightOf="@+id/start_date_data"
            android:layout_toEndOf="@+id/start_date_data" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_time_data"
            android:layout_alignBottom="@+id/end_date_data"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="12:00 AM"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location_input"
            android:layout_below="@+id/end_date_data"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/end_time_data"
            android:layout_alignEnd="@+id/end_time_data"
            android:hint="Please Enter a Location"
            android:clickable="true"
            android:focusable="false" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_input"
            android:layout_below="@+id/location_input"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guests"
            android:textSize="25sp"
            android:id="@+id/guest_label"
            android:layout_below="@+id/description_input"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guest_input"
            android:hint="Passel User"
            android:layout_below="@+id/guest_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/add_guest_button"
            android:layout_toStartOf="@+id/add_guest_button" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/guest_list_view"
            android:dividerHeight="1dp"
            android:layout_below="@+id/guest_input"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Guest"
            android:id="@+id/add_guest_button"
            android:layout_above="@+id/guest_list_view"
            android:layout_alignRight="@+id/end_time_data"
            android:layout_alignEnd="@+id/end_time_data"
            android:layout_toRightOf="@+id/start_date_button"
            android:layout_toEndOf="@+id/start_date_button" />

    </RelativeLayout>
</ScrollView>