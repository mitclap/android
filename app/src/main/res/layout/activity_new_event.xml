<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="passel.w21789.com.passel.NewEventActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:editable="true"
        android:enabled="true"
        android:hint="Event Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_date_data"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Start Date"
        android:layout_toLeftOf="@+id/start_time_button"
        android:layout_toStartOf="@+id/start_time_button" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/start_time_button"
        android:src="@drawable/ic_calendar"
        android:layout_below="@+id/editText"
        android:layout_toStartOf="@+id/start_time_data"
        android:layout_toLeftOf="@+id/start_time_data"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_time_data"
        android:layout_below="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Start Time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_date_data"
        android:layout_below="@+id/start_date_data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="End Date "
        android:layout_toLeftOf="@+id/end_date_button"
        android:layout_toStartOf="@+id/end_date_button" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/end_date_button"
        android:src="@drawable/ic_calendar"
        android:layout_below="@+id/start_date_data"
        android:layout_toRightOf="@+id/start_date_data"
        android:layout_toEndOf="@+id/start_date_data" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_time_data"
        android:layout_alignBottom="@+id/end_date_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="End Time "/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location_input"
        android:layout_below="@+id/end_date_data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/end_time_data"
        android:layout_alignEnd="@+id/end_time_data"
        android:hint="Location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_input"
        android:layout_below="@+id/location_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guests"
        android:id="@+id/guest_input"
        android:layout_below="@+id/description_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
